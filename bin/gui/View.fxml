<AnchorPane prefHeight="388.0" prefWidth="503.0" styleClass="anchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <VBox prefHeight="388.0" prefWidth="503.0" style="-fx-border-color: black;">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Figures">
                  <items>
                        <MenuItem fx:id="menuItemCircle" mnemonicParsing="false" onAction="#onMenuItemCircleAction" styleClass="menuItem" text="Circle" />
                    <MenuItem fx:id="menuItemSquare" mnemonicParsing="false" onAction="#onMenuItemSquareAction" text="Square" />
                        <MenuItem fx:id="menuItemRectangle" mnemonicParsing="false" onAction="#onMenuItemRectangleAction" text="Rectangle" />
                        <MenuItem fx:id="menuItemTriangle" mnemonicParsing="false" onAction="#onMenuItemTriangleAction" text="Triangle" />
                  </items>
                </Menu>
                  <Menu fx:id="menuExit" mnemonicParsing="false" onAction="#onMenuExitAction" text="Exit" />
              </menus>
            </MenuBar>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="504.0" text="Figures">
               <VBox.margin>
                  <Insets top="120.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="504.0" text="Area and Perimeter">
